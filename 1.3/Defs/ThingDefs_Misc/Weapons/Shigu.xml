<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================= Industrial ==================================== -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ShiguPistol</defName>
    <label>Shigu pistol bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <stoppingPower>1.3</stoppingPower>
      <speed>52</speed>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ShiguPistol</defName>
    <label>Shigu Pistol</label>
    <description>A heavy Shigu toggle lock pistol. made out of metal and ceramic, and outfitted with a simple bayonett. One of the few firearms created by Eltus folks.</description>
    <graphicData>
      <texPath>Things/Item/Weapon/ShiguPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>Interact_Revolver</soundInteract>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>1.9</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SimpleGun</li>
      <li>ShiguRare</li>
	  <li>Shigu</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <costList>
      <Steel>30</Steel>
	  <VilousCeramic>45</VilousCeramic>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ShiguPistol</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25.9</range>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>bayonett</label>
        <capacities>
          <li>Stab</li>
          <li>Poke</li>
        </capacities>
        <power>11</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Shigu_Bow</defName>
    <label>shigu bow</label>
    <description>A bladed Shigu bow. Heavy blades make up it's limbs.</description>
    <graphicData>
      <texPath>Things/Item/Weapon/Shigubow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <Steel>20</Steel>
	  <VilousCeramic>60</VilousCeramic>
    </costList>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>2.0</Mass>
      <AccuracyTouch>0.69</AccuracyTouch>
      <AccuracyShort>0.82</AccuracyShort>
      <AccuracyMedium>0.72</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
	  <li>Shigu</li>
	  <li>ShiguCommon</li>
      <li>NeolithicRangedChief</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_Shigu</defaultProjectile>
        <warmupTime>2.0</warmupTime>
        <range>29.9</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>Greatbow</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_Shigu</defName>
    <label>shigu arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <armorPenetrationBase>0.15</armorPenetrationBase>
      <speed>49</speed>
    </projectile>
  </ThingDef>
</Defs>
